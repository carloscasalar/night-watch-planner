{
  "eslint.workingDirectories": ["client"],
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "cSpell.words": [
    "reduxjs"
  ],
}
